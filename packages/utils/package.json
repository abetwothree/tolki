{
    "name": "@tolki/utils",
    "version": "1.0.1",
    "description": "A set of utility functions for the @tolki packages.",
    "author": "Abraham Arango <https://github.com/abetwothree>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/abetwothree/tolki.git",
        "directory": "packages/utils"
    },
    "bugs": {
        "url": "https://github.com/abetwothree/tolki/issues"
    },
    "type": "module",
    "main": "src/index.ts",
    "scripts": {
        "build": "vite build",
        "prepack": "pnpm run build"
    },
    "dependencies": {
        "@tolki/types": "workspace:^"
    },
    "sideEffects": false,
    "packageManager": "pnpm@10.12.1",
    "files": [
        "dist"
    ],
    "publishConfig": {
        "main": "dist/index.js",
        "types": "dist/index.d.ts",
        "exports": {
            ".": {
                "import": "./dist/index.js",
                "require": "./dist/index.js",
                "types": "./dist/index.d.ts"
            },
            "./utils": {
                "import": "./dist/utils.js",
                "types": "./dist/utils.d.ts"
            }
        }
    }
}
