{
    "name": "@zinaid/num",
    "version": "0.0.5",
    "description": "Utilities for working with numbers similar to Laravel's Num class facade.",
    "type": "module",
    "main": "src/index.ts",
    "scripts": {
        "build": "vite build",
        "prepack": "pnpm run build"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "sideEffects": false,
    "packageManager": "pnpm@10.12.1",
    "dependencies": {
        "@zinaid/utils": "workspace:^"
    },
    "devDependencies": {
        "to-words": "^4.7.0"
    },
    "peerDependencies": {
        "to-words": "^4.7.0"
    },
    "peerDependenciesMeta": {
        "to-words": {
            "optional": true
        }
    },
    "files": [
        "dist"
    ],
    "publishConfig": {
        "main": "dist/index.js",
        "types": "dist/index.d.ts",
        "exports": {
            ".": {
                "import": "./dist/index.js",
                "require": "./dist/index.js",
                "types": "./dist/index.d.ts"
            },
            "./*": {
                "import": "./dist/*",
                "require": "./dist/*",
                "types": "./dist/*"
            },
            "./num": {
                "import": "./dist/num.js",
                "types": "./dist/num.d.ts"
            },
            "./speller": {
                "import": "./dist/speller.js",
                "types": "./dist/speller.d.ts"
            }
        }
    }
}
