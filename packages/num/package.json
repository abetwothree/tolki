{
    "name": "@tolki/num",
    "version": "1.0.3",
    "description": "Utilities for working with numbers similar to Laravel's Num class facade.",
    "author": "Abraham Arango <https://github.com/abetwothree>",
    "license": "MIT",
    "homepage": "https://tolki.abe.dev/numbers/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/abetwothree/tolki.git",
        "directory": "packages/num"
    },
    "bugs": {
        "url": "https://github.com/abetwothree/tolki/issues"
    },
    "type": "module",
    "main": "src/index.ts",
    "scripts": {
        "build": "vite build",
        "prepack": "pnpm run build"
    },
    "keywords": [
        "number",
        "numbers",
        "num",
        "laravel",
        "utils",
        "utilities"
    ],
    "sideEffects": false,
    "packageManager": "pnpm@10.12.1",
    "dependencies": {
        "@tolki/utils": "workspace:^"
    },
    "devDependencies": {
        "to-words": "catalog:num"
    },
    "peerDependencies": {
        "to-words": "catalog:num"
    },
    "files": [
        "dist"
    ],
    "publishConfig": {
        "main": "dist/index.js",
        "types": "dist/index.d.ts",
        "exports": {
            ".": {
                "import": "./dist/index.js",
                "require": "./dist/index.js",
                "types": "./dist/index.d.ts"
            },
            "./*": {
                "import": "./dist/*",
                "require": "./dist/*",
                "types": "./dist/*"
            },
            "./num": {
                "import": "./dist/num.js",
                "types": "./dist/num.d.ts"
            },
            "./speller": {
                "import": "./dist/speller/index.js",
                "types": "./dist/speller/index.d.ts"
            }
        }
    }
}
