{
    "name": "@tolki/monorepo",
    "version": "0.0.0",
    "description": "Use the PHP Laravel framework support utilities in your JavaScript codebases",
    "type": "module",
    "private": true,
    "scripts": {
        "release": "pnpm test && pnpm lint:eslint && pnpm format && pnpm document:version && pnpm ci:publish",
        "ci:release": "pnpm test && pnpm lint && pnpm format && pnpm ci:publish",
        "ci:publish": "pnpm publish -r --access=public --no-git-checks --report-summary --provenance",
        "ci:publish-arr": "pnpm publish --filter @tolki/arr --access=public",
        "ci:publish-collection": "pnpm publish --filter @tolki/collection --access=public",
        "ci:publish-data": "pnpm publish --filter @tolki/data --access=public",
        "ci:publish-num": "pnpm publish --filter @tolki/num --access=public",
        "ci:publish-obj": "pnpm publish --filter @tolki/obj --access=public",
        "ci:publish-path": "pnpm publish --filter @tolki/path --access=public",
        "ci:publish-str": "pnpm publish --filter @tolki/str --access=public",
        "ci:publish-utils": "pnpm publish --filter @tolki/utils --access=public",
        "build": "run-s build:*",
        "build:arr": "pnpm -F @tolki/arr build",
        "build:collection": "pnpm -F @tolki/collection build",
        "build:data": "pnpm -F @tolki/data build",
        "build:num": "pnpm -F @tolki/num build",
        "build:obj": "pnpm -F @tolki/obj build",
        "build:path": "pnpm -F @tolki/path build",
        "build:str": "pnpm -F @tolki/str build",
        "build:utils": "pnpm -F @tolki/utils build",
        "document:change": "pnpx @changesets/cli add",
        "document:version": "pnpx @changesets/cli version",
        "document:empty": "npx changeset add --empty",
        "clean": "pnpm lint && pnpm format",
        "format": "npx prettier --write . --cache",
        "format:check": "npx prettier --check .",
        "lint": "run-s lint:*",
        "lint:migrate": "rm -f .oxlintrc.json && npx @oxlint/migrate && prettier --write .oxlintrc.json",
        "lint:oxlint": "npx oxlint --fix -D correctness --ignore-path .gitignore",
        "lint:eslint": "npx eslint . --fix",
        "test": "vitest --run --coverage",
        "test:dev": "vitest --coverage",
        "test:ui": "vitest --ui --coverage",
        "ts:check": "tsc --incremental --noEmit --pretty",
        "docs:dev": "vitepress dev docs/vitepress",
        "docs:build": "vitepress build docs/vitepress",
        "docs:preview": "vitepress preview docs/vitepress",
        "list:functions": "ts-node ./scripts/functions-list.ts",
        "stubs": "run-s stubs:*",
        "stubs:pull": "ts-node ./scripts/pull-framework-repos.ts",
        "stubs:copy-framework": "ts-node ./scripts/copy-framework-files.ts",
        "stubs:copy-docs": "ts-node ./scripts/copy-framework-docs-files.ts && npx prettier --write docs/stubs --cache",
        "stubs:create-lists": "ts-node ./scripts/stubs-function-list-create.ts"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "packageManager": "pnpm@10.12.1",
    "devDependencies": {
        "@changesets/cli": "^2.29.8",
        "@eslint/css": "^0.14.1",
        "@eslint/js": "^10.0.1",
        "@eslint/json": "^0.14.0",
        "@eslint/markdown": "^7.5.1",
        "@oxlint/migrate": "^1.46.0",
        "@tolki/all": "workspace:^",
        "@tolki/arr": "workspace:^",
        "@tolki/collection": "workspace:^",
        "@tolki/data": "workspace:^",
        "@tolki/num": "workspace:^",
        "@tolki/obj": "workspace:^",
        "@tolki/path": "workspace:^",
        "@tolki/str": "workspace:^",
        "@tolki/types": "workspace:^",
        "@tolki/utils": "workspace:^",
        "@types/lodash": "^4.17.23",
        "@types/lodash-es": "^4.17.12",
        "@types/node": "^25.2.3",
        "@vitest/coverage-istanbul": "^4.0.18",
        "@vitest/ui": "^4.0.18",
        "any-ascii": "^0.3.3",
        "dotenv": "^17.3.1",
        "eslint": "^9.39.2",
        "eslint-plugin-oxlint": "^1.46.0",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "glob": "^13.0.3",
        "globals": "^17.3.0",
        "jiti": "^2.6.1",
        "jsdom": "^27.4.0",
        "lodash": "^4.17.23",
        "markdown-it": "^14.1.1",
        "markdown-it-anchor": "^9.2.0",
        "markdown-it-task-lists": "^2.1.1",
        "npm-run-all2": "^8.0.4",
        "oxlint": "^1.47.0",
        "path": "^0.12.7",
        "pluralize": "^8.0.0",
        "prettier": "3.8.1",
        "to-words": "^5.1.0",
        "transliteration": "^2.6.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.55.0",
        "ulid": "^3.0.2",
        "uuid": "^13.0.0",
        "vite": "^7.3.1",
        "vite-plugin-dts": "^4.5.4",
        "vitepress": "2.0.0-alpha.16",
        "vitepress-plugin-llms": "^1.11.0",
        "vitest": "^4.0.18"
    }
}
