{
    "name": "@zinaid/monorepo",
    "version": "0.0.0",
    "description": "",
    "type": "module",
    "private": true,
    "scripts": {
        "release": "pnpm test && pnpm document:version && pnpm ci:publish",
        "ci:publish": "pnpm publish -r --access=public --no-git-checks",
        "ci:publish-arr": "pnpm publish --filter @zinaid/arr --access=public",
        "ci:publish-collection": "pnpm publish --filter @zinaid/collection --access=public",
        "ci:publish-data": "pnpm publish --filter @zinaid/data --access=public",
        "ci:publish-num": "pnpm publish --filter @zinaid/num --access=public",
        "ci:publish-obj": "pnpm publish --filter @zinaid/obj --access=public",
        "ci:publish-path": "pnpm publish --filter @zinaid/path --access=public",
        "ci:publish-str": "pnpm publish --filter @zinaid/str --access=public",
        "ci:publish-utils": "pnpm publish --filter @zinaid/utils --access=public",
        "build": "run-s build:*",
        "build:arr": "pnpm -F @zinaid/arr build",
        "build:collection": "pnpm -F @zinaid/collection build",
        "build:data": "pnpm -F @zinaid/data build",
        "build:num": "pnpm -F @zinaid/num build",
        "build:obj": "pnpm -F @zinaid/obj build",
        "build:path": "pnpm -F @zinaid/path build",
        "build:str": "pnpm -F @zinaid/str build",
        "build:utils": "pnpm -F @zinaid/utils build",
        "document:change": "pnpx @changesets/cli add",
        "document:version": "pnpx @changesets/cli version",
        "format": "npx prettier --write . --cache",
        "format:check": "npx prettier --check .",
        "lint": "run-s lint:*",
        "lint:migrate": "rm -f .oxlintrc.json && npx @oxlint/migrate && prettier --write .oxlintrc.json",
        "lint:oxlint": "npx oxlint --fix -D correctness --ignore-path .gitignore",
        "lint:eslint": "npx eslint . --fix",
        "test": "vitest --run --coverage",
        "test:dev": "vitest --coverage",
        "test:ui": "vitest --ui --coverage",
        "ts:check": "tsc --incremental --noEmit",
        "docs:dev": "vitepress dev docs",
        "docs:build": "vitepress build docs",
        "docs:preview": "vitepress preview docs",
        "list:functions": "ts-node ./scripts/functions-list.ts",
        "stubs": "run-s stubs:*",
        "stubs:copy-framework": "ts-node ./scripts/copy-framework-files.ts",
        "stubs:create-lists": "ts-node ./scripts/stubs-function-list-create.ts"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "packageManager": "pnpm@10.12.1",
    "devDependencies": {
        "@changesets/cli": "^2.29.8",
        "@eslint/css": "^0.14.1",
        "@eslint/js": "^10.0.0",
        "@eslint/json": "^0.14.0",
        "@eslint/markdown": "^7.5.1",
        "@oxlint/migrate": "^1.38.0",
        "@types/node": "^25.0.3",
        "@vitest/coverage-istanbul": "^4.0.16",
        "@vitest/ui": "^4.0.16",
        "@zinaid/all": "workspace:^",
        "@zinaid/arr": "workspace:^",
        "@zinaid/collection": "workspace:^",
        "@zinaid/data": "workspace:^",
        "@zinaid/num": "workspace:^",
        "@zinaid/obj": "workspace:^",
        "@zinaid/path": "workspace:^",
        "@zinaid/str": "workspace:^",
        "@zinaid/types": "workspace:^",
        "@zinaid/utils": "workspace:^",
        "any-ascii": "^0.3.3",
        "dotenv": "^17.2.3",
        "eslint": "^9.39.2",
        "eslint-plugin-oxlint": "^1.38.0",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "glob": "^13.0.0",
        "globals": "^17.0.0",
        "jiti": "^2.6.1",
        "jsdom": "^27.4.0",
        "markdown-it": "^14.1.0",
        "markdown-it-anchor": "^9.2.0",
        "markdown-it-task-lists": "^2.1.1",
        "npm-run-all2": "^8.0.4",
        "oxlint": "^1.38.0",
        "path": "^0.12.7",
        "pluralize": "^8.0.0",
        "prettier": "3.7.4",
        "to-words": "^4.10.0",
        "transliteration": "^2.6.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.52.0",
        "ulid": "^3.0.2",
        "uuid": "^13.0.0",
        "vite": "^7.3.1",
        "vite-plugin-dts": "^4.5.4",
        "vitepress": "2.0.0-alpha.15",
        "vitest": "^4.0.16"
    }
}
